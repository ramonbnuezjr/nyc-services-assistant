# NYC Services GPT - MVP Configuration
# Copy this file to .env and fill in your actual values

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Feature Flags for MVP UI
USE_REAL_LLM=true              # true|false (overrides Mock)
DEFAULT_PROVIDER=openai        # openai|gemini|mock
RATE_LIMIT_ENABLED=true        # keep it on, but…
RATE_LIMIT_RPS=5               # …bump it for local dev
ALLOWLIST=127.0.0.1,::1       # rate-limit skiplist for localhost

# RAG System Settings
VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-4o-mini

# API Settings
API_HOST=0.0.0.0
API_PORT=5000
DEBUG_MODE=true

# Evaluation Settings
TARGET_SUCCESS_RATE=90.0
SYNTHETIC_QUERY_COUNT=100
